<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dishankaashvi.dabba.MenuCard">


    <Button
        android:text="Add to cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:background="#368fe7"
        android:textColor="#000000" />

    <TextView
        android:text="@string/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thali_name"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:textAlignment="center"
        android:background="#368fe7"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/thali_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:layout_below="@+id/thali_name"
        android:layout_above="@+id/thali_content"
        android:outlineProvider="paddedBounds" />

    <TextView
        android:text="@string/contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thali_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:padding="20dp"
        android:background="#deedfc"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thali_price"
        android:textSize="20sp"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#deedfc"
        android:layout_below="@+id/thali_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thali_price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="33dp"
        android:id="@+id/qty" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_below="@+id/thali_price"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/qtyvalue" />


</RelativeLayout>