<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dishankaashvi.dabba.bill"
    android:layout_marginTop="20dp">

    <Button
        android:text="Confirm Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orderConfirm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Your bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/billTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textAlignment="center" />

    <TextView
        android:text="Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalRHS"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/totalLHS"
        android:layout_alignBottom="@+id/totalLHS"
        android:layout_alignRight="@+id/dateRHS"
        android:layout_alignEnd="@+id/dateRHS"
        android:padding="20dp" />

    <TextView
        android:text="Ordered on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateLHS"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_alignTop="@+id/dateRHS"
        android:layout_alignRight="@+id/nameLHS"
        android:layout_alignEnd="@+id/nameLHS" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateRHS"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="42dp"
        android:padding="20dp"
        android:layout_below="@+id/billTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/dateLHS"
        android:layout_toEndOf="@+id/dateLHS" />

    <TextView
        android:text="Item name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameLHS"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_below="@+id/dateLHS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Veg simple thali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameRHS"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_below="@+id/dateLHS"
        android:layout_toRightOf="@+id/dateLHS"
        android:layout_toEndOf="@+id/dateLHS" />

    <TextView
        android:text="Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/costRHS"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:padding="20dp"
        android:layout_below="@+id/nameRHS"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Total Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalLHS"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_above="@+id/orderConfirm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp" />

    <TextView
        android:text="Cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/costLHS"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_alignBaseline="@+id/costRHS"
        android:layout_alignBottom="@+id/costRHS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
